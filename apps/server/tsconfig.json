{
  "compilerOptions": {
    "target": "ESNEXT", // 设置编译目标为 ESNEXT，支持最新 JavaScript 特性
    "module": "ESNext", // 使用 ESNext 模块系统
    "moduleResolution": "node", // 使用 Node.js 风格的模块解析
    "strict": false,
    "esModuleInterop": true, // 不然 koa 模块报错
    "allowSyntheticDefaultImports": true, // 允许合成默认导入
    "noEmit": true, // allowImportingTsExtensions 需要此配置项
    "allowImportingTsExtensions": true, // 允许导入 ts 模块
    "resolveJsonModule": true,
    /* Sort path */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "tsoa": ["node_modules/tsoa/dist"],
      "tsoa/": ["node_modules/tsoa/dist/"],
      "@prisma/client": ["node_modules/@prisma/client"]
    },

    /* 1. 允许在类及其成员上使用装饰器语法 */
    "experimentalDecorators": true,
    /* 2. 为装饰器发射类型元数据（如设计类型、参数类型、返回类型） */
    "emitDecoratorMetadata": true
  }
}
