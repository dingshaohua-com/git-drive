    "@prisma/client": "^6.13.0",
    "@tsoa/runtime": "^6.6.0",
    "axios": "^1.11.0",
    "dayjs": "^1.11.13",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "koa": "^3.0.1",
    "koa-body": "^6.0.1",
    "koa-combine-routers": "^4.0.2",
    "koa-mount": "^4.2.0",
    "koa-static": "^5.0.0",
    "koa2-swagger-ui": "^5.11.0",
